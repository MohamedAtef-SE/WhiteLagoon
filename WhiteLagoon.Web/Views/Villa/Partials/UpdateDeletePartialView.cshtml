@model VillaViewModel


<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@TempData["Action"] Villa</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row" asp-action="@TempData["Action"]" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="col-9">
                <div class="p-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Name" disabled="@TempData["Action"]?.Equals("Delete")" class="form-control border shadow" />
                        <label asp-for="Name" class="ms-2"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Description" disabled="@TempData["Action"]?.Equals("Delete")" class="form-control border shadow" />
                        <label asp-for="Description" class="ms-2"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Price" disabled="@TempData["Action"]?.Equals("Delete")" class="form-control border shadow" />
                        <label asp-for="Price" class="ms-2"></label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Sqft" disabled="@TempData["Action"]?.Equals("Delete")" class="form-control border shadow" />
                        <label asp-for="Sqft" class="ms-2"></label>
                        <span asp-validation-for="Sqft" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Occupancy" disabled="@TempData["Action"]?.Equals("Delete")" class="form-control border shadow" />
                        <label asp-for="Occupancy" class="ms-2"></label>
                        <span asp-validation-for="Occupancy" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Image" disabled="@TempData["Action"]?.Equals("Delete")" class="form-control border shadow" />
                        <input asp-for="ImageURL" disabled="@TempData["Action"]?.Equals("Delete")" class="form-control border shadow" />
                        <label asp-for="Image" class="ms-2"></label>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button id="btnCreateVilla" type="submit" class="btn btn-success w-100">
                                <i class="bi bi-check-circle"></i> @TempData["Action"]
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <img src="@Model.ImageURL" class="w-100 border-2 rounded border-white" />
            </div>

        </form>

    </div>
</div>
